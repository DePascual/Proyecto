@model FITOCRACY.ViewModels.UsuariosViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>


@Html.Raw(TempData["msg"])



<h3>Hey Fitocrat!</h3>
<p>Log In to continue tracking your workouts, developing healthy habits, and reaching your goals with the help of our expert coaches.</p>
<div class="row">

    <h4 class="text-center" style="font-family:Arial; color:dimgrey;">Log In with your Username</h4>
    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="text-danger text-center"><h3>@ViewBag.Error</h3></div>
    }

    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
    {
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        @Html.AntiForgeryToken()

        <div class="container input-group text-center">
            @Html.EditorFor(model => model.usuarioLogin.email, new { htmlAttributes = new { @class = "form-control", @placeholder = "yourname@adress.com", style = "width: 800px;" } })
        </div>
        <br />
        <div class="container input-group text-center">
            @Html.EditorFor(model => model.usuarioLogin.password, new { htmlAttributes = new { @class = "form-control", @placeholder = "*****", style = "width: 800px;" } })
        </div>
        <br />
        <div class="container text-center input-group">
            <a href="@Url.Action("ForgotPassword", "Home")">I forgot my username or password</a>
        </div>
        <br />
            <div class="container text-center">
                <button type="submit" class="btn btn-primary btn-lg" style="width:300px;">Log In</button>
            </div>
    }
</div>

<hr />
<div class="container text-center">
    <h4><a href="http://localhost:1398/Home/Registro">I want to create a new account</a></h4>
</div>


