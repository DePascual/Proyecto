@model FITOCRACY.ViewModels.UsuariosViewModel

@{
    ViewBag.Title = "Registro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/bootstrap.min.js")" type="text/javascript"></script>

<h4>Hey, Stranger!</h4>
<p>Sign up below to continue your health and fitness journey.</p>
@if (!string.IsNullOrEmpty(ViewBag.Error))
{
    <div class="text-danger text-center"><h3>@ViewBag.Error</h3></div>
}
@using (Html.BeginForm("Registro", "Home", FormMethod.Post))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.AntiForgeryToken()

    <div class="container input-group text-center">
        <label style="float:left">Email Adress</label>
        <br />      
        @Html.EditorFor(model => model.usuarioRegistro.email, new { htmlAttributes = new { @class = "form-control", @placeholder = "yourname@adress.com", style = "width: 900px;" } })
    </div>
    <br />

    <div class="container input-group text-center">
        <label style="float:left">Username</label>
        <br />                  
        @Html.EditorFor(model => model.usuarioRegistro.username, new { htmlAttributes = new { @class = "form-control", @placeholder = "Username", style = "width: 900px;" } })
    </div>
    <br />

     <div class="container input-group text-center">
         <label style="float:left">Password</label>
         <br />                 
         @Html.EditorFor(model => model.usuarioRegistro.password, new { htmlAttributes = new { @class = "form-control", @placeholder = "password*****", style = "width: 900px;" } })
     </div>
     <br />

     <div class="container input-group text-center">
         <label style="float:left">Revwite Password</label>
         <br />
         @Html.EditorFor(model => model.usuarioRegistro.confPassword, new { htmlAttributes = new { @class = "form-control", @placeholder = "Rewrite password*****", style = "width: 900px;" } })
      </div>

      <br />

    <div class="container input-group text-center">
        <button type="submit" class="btn btn-primary btn-lg btn-block" style="width:300px;">Create An Account</button>
    </div>
              
}

<hr />
<div class="container text-center">
    <h4><a href="http://localhost:1398/Home/Login" data-toggle="modal" data-dismiss="modal" aria-hidden="true">I have already a Fitocracy account, silly!</a></h4>
</div>





